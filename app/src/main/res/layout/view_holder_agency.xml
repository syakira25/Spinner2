<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/standard_separator"
    android:layout_marginBottom="@dimen/standard_separator">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_assignment_grey_24dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a name"
        android:ellipsize="end"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_alignTop="@id/iv_icon"
        android:layout_toEndOf="@id/iv_icon"
        android:paddingStart="@dimen/standard_separator"
        android:paddingEnd="@dimen/standard_separator"
        android:layout_toRightOf="@id/iv_icon" />

    <TextView
        android:id="@+id/tv_email"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_toEndOf="@+id/iv_icon"
        android:ellipsize="end"
        android:paddingEnd="@dimen/standard_separator"
        android:paddingStart="@dimen/standard_separator"
        android:text="Email Agency"
        android:layout_toRightOf="@+id/iv_icon" />

</RelativeLayout>